<table class='table table-hover table-striped'>
  <tr>
    <th>Food</th>
    <th>Number of Votes</th>
    <th></th>
  </tr>
  <% Choices.each do |id, text| %>
    <tr>
      <td><%= text %></td>
      <td><%= @votes[id] || 0 %></td>
      <td><%= '#' * (@votes[id] || 0) %></td>
    </tr>
  <% end %>
</table>
<p><a href='/'>Cast mote votes!</a></p>
